<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#c5ceff"
    style="@style/Base.DialogWindowTitle.AppCompat"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quiero agradecerte por todo lo que haces por mi..."
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Por soportarme en las veces en que me porto demasiado infantil para lograr sacarte un sonrisa"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/btnNotificacionBasica"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Porque a pesar de solo vernos aunque sea 5 minutos son suficientes para saber que te sigo queriendo y se que estas ahi para mi"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/btnNotificacionBasica"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Porque con solo sonreir haces que te quiera un poquito mas de lo que ya te quiero...."
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/btnNotificacionBasica"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Porque con solo verme me lees por completo y sabes que lo unico que necesito es verte sonreir y un abrazo muy fuerte"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/btnNotificacionBasica"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sin embargo... en el tiempo que pueda disfrutar de tu compañia yo te apoyare, cuidare, te consentira y te enseñare lo bella que es la vida cuando tienes un gran sonrisa para mostrarle al mundo...   "
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/btnNotificacionBasica"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Por eso y mucho mas yo...."
        android:id="@+id/textView7"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/btnNotificacionBasica"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:id="@+id/btnNotificacionBasica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Te Quiero Mucho Mucho Nena Hermosa "
        android:onClick="onClick"
        android:background="#fcb4fa"
        android:textColor="#ff0000" />

</LinearLayout>
