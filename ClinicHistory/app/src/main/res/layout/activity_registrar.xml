<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.clinichistory.Registrar">

    <TextView
        android:text="REGISTRAR PACIENTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView"
        android:fontFamily="serif"
        android:typeface="serif"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_i_Cedula"
            android:hint="Ingrese ID / Cedula"
            android:fontFamily="serif"
            android:typeface="serif"
            android:textStyle="normal|italic"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_i_Nombre"
            android:hint="Nombres"
            android:fontFamily="serif"
            android:typeface="serif"
            android:textStyle="normal|italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_i_Apellido"
            android:hint="Apellidos"
            android:fontFamily="serif"
            android:typeface="serif"
            android:textStyle="normal|italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_i_Telefono"
            android:hint="Numero telefonico"
            android:fontFamily="serif"
            android:typeface="serif"
            android:textStyle="normal|italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_i_Direccion"
            android:hint="Domicilio"
            android:fontFamily="serif"
            android:typeface="serif"
            android:textStyle="normal|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90px">

            <Button
                android:text="Registrar"
                android:layout_width="80px"
                android:layout_height="wrap_content"
                android:id="@+id/btnConfirmarR"
                android:layout_weight="1"
                android:elevation="15dp"
                android:fontFamily="serif"
                android:typeface="sans"
                android:textStyle="normal|bold"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginTop="45px"
                android:onClick="RegistrarPaciente"
                android:textColor="@color/colorPrimary" />

            <Button
                android:text="Regresar"
                android:layout_width="80px"
                android:layout_height="wrap_content"
                android:id="@+id/btnVolverR"
                android:layout_weight="1"
                android:elevation="15dp"
                android:fontFamily="serif"
                android:typeface="sans"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_marginRight="15px"
                android:layout_marginLeft="15px"
                android:layout_marginTop="45px"
                android:textColor="@android:color/holo_red_dark"
                android:onClick="RegresarR" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="Datos Personales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView2"
        android:fontFamily="serif"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
