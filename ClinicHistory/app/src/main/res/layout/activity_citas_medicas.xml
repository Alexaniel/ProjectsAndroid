<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_citas_medicas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.clinichistory.CitasMedicas">

    <TextView
        android:text="Consulta de Citas Medicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView11"
        android:fontFamily="serif"
        android:typeface="serif"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dip"
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="60dp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_cm_Vista"
                    android:layout_width="match_parent"
                    android:layout_height="255dp"
                    android:layout_margin="15dip"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:typeface="serif"
                    android:textColor="@android:color/holo_blue_dark" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:text="Regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegresarCm"
        android:elevation="15dp"
        android:textStyle="normal|bold"
        android:typeface="serif"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:onClick="RegresarCM" />

    <TextView
        android:text="Citas Medicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_weight="0.33"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="22dp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="serif"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
