<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.clinichistory.Principal"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp">

        <Button
            android:text="Registrar Paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegistrar"
            style="@android:style/Widget.DeviceDefault.Button"
            android:elevation="15dp"
            android:typeface="sans"
            android:layout_marginBottom="10px"
            android:background="@color/colorPrimary"
            android:onClick="Registrar" />

        <Button
            android:text="Modificar Paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnModificar"
            style="@android:style/Widget.DeviceDefault.Button"
            android:elevation="15dp"
            android:typeface="sans"
            android:layout_marginBottom="10px"
            android:background="@color/colorPrimary"
            android:onClick="Modificar" />

        <Button
            android:text="Consultar Cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCita"
            style="@android:style/Widget.DeviceDefault.Button"
            android:elevation="15dp"
            android:typeface="sans"
            android:layout_marginBottom="10px"
            android:background="@color/colorPrimary"
            android:onClick="CitasMedicas" />

        <Button
            android:text="Lista de Pacientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnListar"
            style="@android:style/Widget.DeviceDefault.Button"
            android:elevation="15dp"
            android:typeface="sans"
            android:background="@color/colorPrimary"
            android:onClick="Listar" />
    </LinearLayout>

    <TextView
        android:text="BIENVENIDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView3"
        android:fontFamily="serif"
        android:typeface="serif"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Aqui puede generar la historia clinica de su paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|italic"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center" />
</RelativeLayout>
