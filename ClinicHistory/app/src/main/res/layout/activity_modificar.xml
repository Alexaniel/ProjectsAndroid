<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modificar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.clinichistory.Modificar">

    <TextView
        android:text="MODIFICAR PACIENTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView5"
        android:fontFamily="serif"
        android:typeface="serif"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="315dp">

        <EditText
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_m_Cedula"
            android:layout_weight="1"
            android:hint="ID / Cedula Paciente"
            android:fontFamily="serif"
            android:typeface="serif"
            android:textStyle="normal|italic"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"/>

        <Button
            android:text="Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBuscar"
            android:layout_weight="1"
            android:elevation="15dp"
            android:fontFamily="serif"
            android:typeface="sans"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginRight="10px"
            android:onClick="BuscarPaciente" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="230dp"
        android:id="@+id/linearLayout4">

        <TextView
            android:text="Nombres"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="0.33"
            android:fontFamily="serif"
            android:typeface="sans"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_m_Nombre"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:typeface="serif"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="190dp"
        android:id="@+id/linearLayout5">

        <TextView
            android:text="Apellidos"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="0.33"
            android:fontFamily="serif"
            android:typeface="sans"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_m_Apellido"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:typeface="serif"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="130dp"
        android:id="@+id/linearLayout6">

        <TextView
            android:text="Telefono"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="0.33"
            android:fontFamily="serif"
            android:typeface="sans"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_m_Telefono"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:typeface="serif"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/linearLayout6"
        android:layout_marginTop="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/linearLayout9">

        <TextView
            android:text="Domicilio"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="0.33"
            android:fontFamily="serif"
            android:typeface="sans"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxt_m_Direccion"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:typeface="serif"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49dp"
        android:layout_alignTop="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp">

        <Button
            android:text="Guardar"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirmarM"
            android:layout_weight="1"
            android:elevation="15dp"
            android:fontFamily="serif"
            android:typeface="sans"
            android:textStyle="normal|bold"
            android:layout_marginLeft="9px"
            android:layout_marginRight="5px"
            android:onClick="ModificarPaciente"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <Button
            android:text="Borrar"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminar"
            android:layout_weight="1"
            android:elevation="15dp"
            android:fontFamily="serif"
            android:typeface="sans"
            android:textStyle="normal|bold"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="EliminarPaciente"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp" />

        <Button
            android:text="Regresar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegresarM"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:onClick="Regresar"
            android:elevation="15dp"
            android:typeface="sans"
            android:textSize="12sp"
            android:layout_marginRight="9dp"/>
    </LinearLayout>

    <TextView
        android:text="Datos del Paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_weight="0.33"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="serif"
        android:layout_above="@+id/linearLayout6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

</RelativeLayout>
